<h2>User info</h2>
<%= image_tag book.user.get_profile_image(100,100) %>
<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th>
        <%= book.user.name %>
      </th>
    </tr>
    <tr>
      <th>introduction</th>
      <th>
        <%= book.user.introduction %>
      </th>
    </tr>
  </tbody>
</table>
<div class="row">
  <%= link_to edit_user_path(current_user) , class: 'btn btn-outline-secondary btn-block' do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
</div>